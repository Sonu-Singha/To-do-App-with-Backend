<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Simple ToDo List App</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/responsive.css">
</head>

<body>

    <!-- Main Heading -->

    <h1>ADD YOUR NOTE</h1>

    <form action="/create-note-page" method="post" class="Title_Form">
        <input type="text" name="title" placeholder="Add your Note title" class="Title_Input" required>
        <button type="Title_Submit" class="Title_Button">Create Note</button>
    </form>

    <!-- Notes Section -->
    <div class="notes-section">
        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="/all-notes" class="view-all-btn">View All Notes</a>
        </div>

        <div class="notes-grid">

            <!-- Dynamically Loading Few Note carts -->

            <% if (!fewNotes || fewNotes.length<1) { %>
                <p class="nothing-to-show">There is No Note to display</p>
                <% } else { %>
                    <% for(let i=0; i < fewNotes.length && i < 6; i++) { %>
                        <div class="note-card" data-note-id=<%= fewNotes[i]._id %>>
                            <h3>
                                <%= fewNotes[i].title %>
                            </h3>
                            <p>
                                <%= fewNotes[i].description %>
                            </p>
                            <div class="note-actions">
                                <form action="/create-note/<%= fewNotes[i]._id %>" method="get">
                                    <button class="edit-btn">Edit</button>
                                </form>

                                <form action="/view-note/<%= fewNotes[i]._id %>" method="get">
                                    <button class="view-btn">View</button>
                                </form>

                                <form action="/delete-note/<%= fewNotes[i]._id %>" method="post">
                                    <button class="delete-btn">Delete</button>
                                </form>

                            </div>
                        </div>
                        <% } %>
                            <% } %>

        </div>

    </div>

    <script src="/script.js"></script>
</body>

</html>